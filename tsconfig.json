{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es5",
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "removeComments": false,
      "noUnusedParameters": true,
      "outDir": "build",
      "allowSyntheticDefaultImports": true,
      "lib": [
        "dom",
        "es5",
        "es2015",
        "es2016",
        "scripthost"
      ]
    },
    "exclude": [
      "build",
      "dist",
      "node_modules"
    ]
  }